<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvSpoSlotContainer"
        android:layout_width="376dp"
        android:layout_height="76dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIdentifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/identifier"
        app:layout_constraintBottom_toBottomOf="@+id/tvSpoSlotContainer"
        app:layout_constraintEnd_toStartOf="@+id/ivEditIcon"
        app:layout_constraintStart_toEndOf="@+id/tvSlotCode"
        app:layout_constraintTop_toTopOf="@+id/tvSpoSlotContainer" />

    <TextView
        android:id="@+id/tvSlotCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slotcode"
        app:layout_constraintBottom_toBottomOf="@+id/tvSpoSlotContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvSpoSlotContainer"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="@+id/tvSpoSlotContainer"
        app:layout_constraintTop_toTopOf="@+id/tvSpoSlotContainer"
        app:layout_constraintVertical_bias="0.491" />

    <ImageView
        android:id="@+id/ivEditIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSpoSlotContainer"
        app:layout_constraintEnd_toEndOf="@+id/tvSpoSlotContainer"
        app:layout_constraintTop_toTopOf="@+id/tvSpoSlotContainer"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>
